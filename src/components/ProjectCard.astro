---
import type { Project } from '../entries/projects'
import { ExternalLink } from 'react-feather'
export interface Props {
    project: Project
    class?: string
}

const { project, ...props } = Astro.props as Props
---

<div class={"bg-slate-200 rounded-xl p-2 md:flex md:items-center h-full " + (props.class ?? '')}>
    {project.mediaUrls != undefined && project.mediaUrls.length > 0 ?
        <img src={project.mediaUrls[0]} alt={project.name} class="w-full max-h-64 object-cover md:h-fit md:w-1/4 lg:w-1/3 md:object-contain rounded-xl"> : null}
    <div class="p-4">
        <a class="flex items-center" href={project.link} target="_blank">
            <h1 class="text-xl font-bold header">{project.name}</h1>
            {project.link ? <div class="ml-2"><ExternalLink size={18} /></div> : null}
        </a>
        <p class="mb-2"><b>{project.tagline}</b></p>
        <p set:html={project.description}></p>
    </div>
</div>